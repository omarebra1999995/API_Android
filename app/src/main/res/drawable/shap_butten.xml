<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <solid android:color="@color/colorAccent"></solid>

    <corners android:radius="60dp" android:bottomLeftRadius="10dp"></corners>

    <padding android:bottom="10dp" android:left="10dp" android:right="10dp"
        android:top="10dp"></padding>

    <stroke android:color="@color/colorPrimaryDark"
        android:dashGap="10dp" android:dashWidth="2dp"
        android:width="10dp" ></stroke>

    <gradient android:angle="10"
        android:centerColor="@color/colorPrimaryDark" android:endColor="@color/colorAccent" > </gradient>

</shape>